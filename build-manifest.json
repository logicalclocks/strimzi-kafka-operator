[
    {
        "name": "strimzi/base",
        "version": "latest",
        "dockerFile": "docker-images/base/Dockerfile",
        "variables": [
            "VERSION"
        ],
        "extraDockerArgs": "--build-arg strimzi_version=\"$VERSION\" "
    },
    {
        "name": "strimzi/operator",
        "version": "env:VERSION",
        "dockerFile": "docker-images/operator/Dockerfile",
        "variables": [
            "VERSION"
        ],
        "extraDockerArgs": "--build-arg strimzi_version=\"$VERSION\" "
    },
    {
        "name": "strimzi/kafka",
        "version": "env:KAFKA_DOCKER_TAG",
        "dockerFile": "docker-images/kafka-based/kafka/Dockerfile",
        "variables": [
            "VERSION",
            "KAFKA_VERSION"
        ],
        "extraDockerArgs": "--build-arg KAFKA_VERSION=\"$KAFKA_VERSION\" --build-arg KAFKA_DIST_DIR=./tmp/\"$KAFKA_VERSION\" --build-arg THIRD_PARTY_LIBS=3.6.x  --build-arg strimzi_version=\"$VERSION\" "
    }
]